<!-- The main content area -->
<main id="main" role="main">

	<!-- APPS-PAGE -->
	<section class="apps-content">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-grey apps-mobile">
					<div class="inner d-flex align-items-start flex-column h-100">
						<div class="row">
							<div class="col-md-10">
								<h3>Mobile</h3>
								<p class="p-large">Chat, transact, and access a revolutionary new world of √êApps. Access more features like our upcoming hardwallet with the Android App.</p>
								<ul class="buttons">
									<li><a href="#" class="btn btn-fill"><%- image_tag("img/apple-white-logo.svg") %> iOS App</a></li>
									<li><a href="#" class="btn btn-fill"><%- image_tag("img/android-white-logo.svg") %> Android App</a></li>
								</ul>
								<%- image_tag("/img/mobile-illustration.png", { srcset: '/img/mobile-illustration-2x.png 2x'}) %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-6 col-black apps-mac-windows-or-linux">
